{
  "name": "curseforge-api",
  "version": "1.0.0",
  "private": true,
  "description": "An easy to use library to help you consume the CurseForge Core API",
  "keywords": [
    "curse",
    "forge",
    "core",
    "api",
    "curseforge",
    "modding",
    "mods"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/minimusubi/curseforge-api.git"
  },
  "license": "MIT",
  "author": "minimusubi",
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "build": "rm -rfd dist && npx tsc --project .",
    "docs": "npx typedoc src/index.ts",
